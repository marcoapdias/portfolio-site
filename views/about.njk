{% extends "layout.njk" %}

{% block head %}
 
    <title>Sobre - Marco Dias</title>

{% endblock %}

{% block content %}

<div id="wrapper">
    <img src="{{ about.avatar_url }}" alt="Sobre de {{ about.name }}">
    <h1>{{ about.name }}</h1>
    <h2>{{ about.role }}</h2>
    <p> {{ about.description }} </p>
</div>

<div id="links-footer" class="links">
    {% for item in about.link %}
        <a href="{{ item.url }}" target="_blank">{{ item.name }}</a>
    {% endfor %}
</div>

{% endblock %}